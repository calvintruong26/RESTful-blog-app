<% include /partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui center rounded image" src="<%= blog.image %>" style="width: 100%">
            <div class="description">
                <p><%- blog.body %></p>
            </div>
            <div class="content">
                <p><%= blog.created.toDateString() %></p>
            </div>
        </div>
    </div>
    <form method="POST" action="/blogs/<%= blog._id %>?_method=DELETE">
        <a href="/blogs/<%=blog._id%>/edit" class="ui teal basic button">Edit</a>
        <button class="ui red basic button">Delete</button>
    </form>
</div>
<% include /partials/footer %>